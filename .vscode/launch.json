	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "npm run dev",
			"runtimeExecutable": "node",
			"runtimeArgs": ["run", "dev-debug"],
			"port": 7000,
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"skipFiles": ["<node_internals>/**"],
			"program": "${workspaceFolder}/start"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Port",
			"address": "localhost",
			"port": 3000
		}
	]
}
